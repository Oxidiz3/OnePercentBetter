<MainScreen>
    name: "main"
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: '1% Better'
            elevation: 8
            height: dp(40)
        ScrollView:
            MDList:
                id: goal_list
        MDBottomAppBar:
            MDToolbar:
                icon: "plus"
                type: "bottom"
#                left_action_items: [[lambda x: root.manager.current = "info"]]
                on_action_button: root.manager.current = "goal_creation"
                mode: "free-end"

<GoalCreationScreen>:
    name: 'goal_creation'
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Goal Creation'
            elevation: 8
            height: dp(40)

        # vvvvvvv Everything but the toolbars goes in here vvvvvvv
        BoxLayout:
            orientation: 'vertical'
            padding: dp(10)


            MDTextField:
                size_hint_max_y: dp(25)
                hint_text: "Goal Name"
                helper_text: "Pick something unique and fun"
                helper_text_mode: "on_focus"

            MDLabel:
                size_hint_max_y: dp(25)
                text: "How difficult should your goal be?"

            #Check marks --------------
            BoxLayout:
                orientation: "horizontal"
                size_hint_max_y: dp(25)

                IntensityCheck:
                    radio_icon_down: "emoticon-excited"
                    pos_hint: {"center_y": 0.5}
                    active: True
                    on_active: root.get_intensity(0.01)
                IntensityCheck:
                    radio_icon_down: "emoticon-happy"
                    pos_hint: {"center_y": 0.5}
                    on_active: root.get_intensity(0.03)
                IntensityCheck:
                    radio_icon_down: "emoticon-neutral"
                    pos_hint: {"center_y": 0.5}
                    on_active: root.get_intensity(0.05)
                IntensityCheck:
                    radio_icon_down: "emoticon-sad"
                    pos_hint: {"center_y": 0.5}
                    on_active: root.get_intensity(0.07)
                IntensityCheck:
                    radio_icon_down: "emoticon-devil"
                    pos_hint: {"center_y": 0.5}
                    on_active: root.get_intensity(0.1)

            BoxLayout:
                size_hint_max_y: dp(30)
                orientation: 'horizontal'

                GoalType:
                    radio_icon_normal: "counter"
                    radio_icon_down: "counter"
                    pos_hint: {"center_x": 0.3,"center_y": 0.5}
                    active: True
                    on_active: root.get_goal_type("counter")
                MDLabel:
                    text: "Goal Type"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                GoalType:
                    radio_icon_normal: "alarm"
                    radio_icon_down: "alarm"
                    on_active: root.get_goal_type("alarm")
                    pos_hint: {"center_x": 0.8, "center_y": 0.5}

            MDLabel
                text: root.end_goal_text

            MDSlider:
                min: 0
                max: 100

        # ^^^^^ Everything but the toolbars goes in here  ^^^^^

        MDBottomAppBar:
            MDToolbar:
                icon: "check-circle"
                on_action_button:
                    root.manager.transition.direction = 'right'
                    root.manager.current = "main"

<GoalStatsScreen>:
    name: 'goal_stats'
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: '1% Better'
            elevation: 8
            height: dp(40)
        ScrollView:
            MDList:
                id: goal_list
        MDBottomAppBar:
            MDToolbar:
                icon: "plus"
                type: "bottom"
                on_action_button: root.manager.current = "main"
                mode: "free-end"


<InfoScreen>:
    name: 'info'
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: '1% Better'
            elevation: 8
            height: dp(40)
        ScrollView:
            MDList:
                id: goal_list
        MDBottomAppBar:
            MDToolbar:
                icon: "plus"
                type: "bottom"
                on_action_button: root.manager.current = "main"
                mode: "free-end"

<IntensityCheck@MDCheckbox>:
    group: 'intensity'
    size_hint: None, None
    size: dp(48), dp(48)

<GoalType@MDCheckbox>:
    group: 'goal_type'
    size_hint: None, None
    size: dp(48), dp(48)

<GoalListItem>:
    text: root.goal_name
    secondary_text: root.goal_amount

    IconLeftWidget:
#    I don't think this is need anymore
#        id: goal_icon
        icon: root.goal_icon