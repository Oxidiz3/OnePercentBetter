<UIScreenManager>
    MainScreen:
        id: main
    GoalCreationScreen:
        id: goal_creation
    GoalStatsScreen:
        id: goal_stats
    InfoScreen:
        id: info_screen

<MainScreen>
    name: "main"
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: '1% Better'
            elevation: 8
            height: dp(40)
        ScrollView:
            MDList:
                id: goal_list

        MDBottomAppBar:
            MDToolbar:
                icon: "plus"
                type: "bottom"
                left_action_items: [["information", lambda x: root.screen_change("info","right")]]
                on_action_button: app.screen_change("goal_creation", "up")
                mode: "free-end"

<GoalCreationScreen>:
    name: 'goal_creation'
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Goal Creation'
            elevation: 8
            left_action_items: [["arrow-left", lambda x: app.screen_change("main", "down")]]
            height: dp(40)

        # vvvvvvv Everything but the toolbars goes in here vvvvvvv
        BoxLayout:
            orientation: 'vertical'
            padding: dp(10)


            MDTextField:
                id: goal_name
                size_hint_max_y: dp(25)
                hint_text: "Goal Name"
                helper_text: "Pick something unique and fun"
                helper_text_mode: "on_focus"
                required: True
                on_text: root.goal_name = self.text

            MDLabel:
                size_hint_max_y: dp(25)
                text: "How difficult should your goal be?"

            #Check marks --------------
            BoxLayout:
                orientation: "horizontal"
                size_hint_max_y: dp(25)

                IntensityCheck:
                    radio_icon_down: "emoticon-excited"
                    pos_hint: {"center_y": 0.5}
                    active: True
                    on_active: root.intensity = 0.01
                IntensityCheck:
                    radio_icon_down: "emoticon-happy"
                    pos_hint: {"center_y": 0.5}
                    on_active: root.intensity = 0.03
                IntensityCheck:
                    radio_icon_down: "emoticon-neutral"
                    pos_hint: {"center_y": 0.5}
                    on_active: root.intensity = 0.05
                IntensityCheck:
                    radio_icon_down: "emoticon-sad"
                    pos_hint: {"center_y": 0.5}
                    on_active: root.intensity = 0.07
                IntensityCheck:
                    radio_icon_down: "emoticon-devil"
                    pos_hint: {"center_y": 0.5}
                    on_active: root.intensity = 0.1

            BoxLayout:
                size_hint_max_y: dp(30)
                orientation: 'horizontal'

                GoalType:
                    radio_icon_normal: "counter"
                    radio_icon_down: "counter"
                    pos_hint: {"center_x": 0.3,"center_y": 0.5}
                    on_active:
                        root.end_goal_text = "What is your final rep goal?"
                        root.start_goal_text = "What is your starting rep goal?"
                        root.icon = "counter"
                MDLabel:
                    text: "Goal Type"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                GoalType:
                    radio_icon_normal: "alarm"
                    radio_icon_down: "alarm"
                    on_active:
                        root.end_goal_text = "What is your final time goal?"
                        root.start_goal_text = "What is your starting time goal?"
                        root.icon = "alarm"
                    pos_hint: {"center_x": 0.8, "center_y": 0.5}

            MDLabel
                text: root.start_goal_text
            MDTextField:
                id: start_value
                required: True
                input_filter: 'int'
                helper_text_mode: "on_error"
                helper_text: "Insert only numbers"
                on_text: root.start_value = self.text

            MDLabel
                text: root.end_goal_text
            MDTextField:
                id: end_value
                required: True
                input_filter: 'int'
                helper_text_mode: "on_error"
                helper_text: "Insert only numbers"
                on_text: root.end_value = self.text

        # ^^^^^ Everything but the toolbars goes in here  ^^^^^

        MDBottomAppBar:
            MDToolbar:
                icon: "check-circle"
                on_action_button:
                    root.create_new_goal()
                    app.screen_change("main", "down")

<GoalStatsScreen>:
    name: 'goal_stats'
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Goal Stats'
            elevation: 8
            height: dp(40)
            left_action_items: [["arrow-left", lambda x: app.screen_change("main", "right")]]

        # Elements between toolbars
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: 'horizontal'
                MDFloatingActionButton:
                    icon: root.goal_icon
                MDRectangleFlatButton:
                    text: "Goal Name: " + root.goal_name

            BoxLayout:
                orientation: 'horizontal'
                MDRectangleFlatButton:
                    text: "Start value: " + str(root.start_value)
                MDRectangleFlatButton:
                    text: "End value: " + str(root.end_value)

            BoxLayout:
                orientation: 'horizontal'
                MDRectangleFlatButton:
                    text: "Iteration percent: " + str(root.iteration_percent)
                MDRectangleFlatButton:
                    text: "Times completed: " + str(root.iteration_towards_goal)

        MDBottomAppBar:
            MDToolbar:
                icon: "plus"
                type: "bottom"
                on_action_button:
                    app.screen_change("main","left")
                mode: "free-end"


<InfoScreen>:
    name: 'info'
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Info Screen'
            elevation: 8
            height: dp(40)

<IntensityCheck@MDCheckbox>:
    group: 'intensity'
    size_hint: None, None
    size: dp(48), dp(48)

<GoalType@MDCheckbox>:
    group: 'goal_type'
    size_hint: None, None
    size: dp(48), dp(48)

<GoalListItem>:
    text: root.goal_name
    secondary_text: root.goal_amount
    IconLeftWidget:
        icon: root.goal_icon
    IconRightWidget:
        icon: "dots-vertical"
        on_release:
            app.screen_change("goal_stats", "left")
            app.send_goal_name(root.text)