<IntensityCheck@MDCheckbox>:
    group: 'intensity'
    size_hint: None, None
    size: dp(48), dp(48)

<Goal>:
    text: root.goal_name
    secondary_text: root.goal_amount

    IconLeftWidget:
        id: goal_icon
        icon: root.goal_icon